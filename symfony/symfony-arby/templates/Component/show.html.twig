{% extends 'base.html.twig' %}

{% block title %}Component{% endblock %}

{% block body %}
    <h1>Component</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ component.getId() }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ component.getName() }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ component.getPrice() }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ component.getDescription() }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('component_index') }}">back to list</a>

    <a href="{{ path('component_edit', {'id': component.getId()}) }}">edit</a>

    {{ include('component/_delete_form.html.twig') }}
{% endblock %}